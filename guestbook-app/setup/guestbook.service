[Unit]
Description=GuestBook Backend
After=mariadb.service

[Service]
Environment=PORT=8080
#EnvironmentFile=/opt/guestbook.env
ExecStart=/opt/guestbook/LIVE-CODING/guestbook-app/setup/start.sh
WorkingDirectory=/opt/guestbook/LIVE-CODING/guestbook-app/
LimitNOFILE=4096
IgnoreSIGPIPE=false
KillMode=process
User=ec2-user
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
